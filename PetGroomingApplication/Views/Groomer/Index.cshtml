@model IEnumerable<PetGroomingApplication.Models.Groomer>

@{
    ViewBag.Title = "Groomers";
    ViewBag.targetMenu = "groomers";

}
<div class="col-md-8">
    <h2>Groomers</h2>
    <table class="table">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.StartWorkingTime)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.EndWorkingTime)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Specializing)
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td class="text-center">
                    @Html.DisplayFor(modelItem => item.StartWorkingTime)
                </td>
                <td class="text-center">
                    @Html.DisplayFor(modelItem => item.EndWorkingTime)
                </td>
                <td class="text-center">
                    @Html.DisplayFor(modelItem => item.Specializing)
                </td>
                <td class="text-right">
                    <a href="/Groomer/Edit?id=@item.GroomerID" class="btn-row edit">
                        <span class="glyphicon glyphicon-edit" aria-hidden="true"></span>
                        <span>Edit</span>
                    </a>
                    <a href="/Groomer/Delete?id=@item.GroomerID" class="btn-row delete">
                        <span class="glyphicon glyphicon-remove" aria-hidden="true"></span>
                        <span>Delete</span>
                    </a>
                </td>
            </tr>
        }

    </table>
</div>
<div class="col-md-12">
    @Html.ActionLink("Register New Groomer", "Register", "Groomer", null, new { @class = "btn btn-primary text-uppercase" })
</div>


