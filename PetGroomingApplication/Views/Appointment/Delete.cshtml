@model PetGroomingApplication.Models.Appointment

@{
    ViewBag.Title = "Delete";
    string date = Model.DateTime.ToString("dd.MM.yyyy");
    string time = Model.DateTime.ToString("HH:mm");
}
    <div class="col-md-8">
        <h2>Delete Appointment</h2>
        @if (ViewData.ModelState.IsValid)
        {
            <div class="bg-warning padding-10">Are you sure you want to delete this appointment?</div>
        }
        else
        {
            <div class="panel panel-danger">
                <div class="panel-heading">An error occur</div>
                @Html.ValidationSummary(true, "", new { @class = "panel-body" })
            </div>
        }

        <hr />

        <dl class="dl-horizontal">

            <dt>
                @Html.DisplayNameFor(model => model.GroomerID)
            </dt>
            <dd>
                @Html.DisplayFor(model => model.Groomer.Name)
            </dd>

            <dt>
                Date
            </dt>
            <dd>
                @date
            </dd>
            <dt>
                Time
            </dt>
            <dd>
                @time
            </dd>
            <dt>
                @Html.DisplayNameFor(model => model.ServiceID)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.Service.Name)
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.PetID)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.Pet.Name)
            </dd>


            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()

                <dd>
                    <input type="submit" value="DELETE" class="btn btn-primary" />
                </dd>
            }
        </dl>

        <i class="glyphicon glyphicon-menu-left"></i>
        @Html.ActionLink(
             linkText: "Back to list",
             actionName: "Index",
             controllerName: "Appointment",
             routeValues: new { date = Model.DateTime.ToString("yyyy-MM-dd") },
             htmlAttributes: new { @id = "appointments" }
         )
    </div>
